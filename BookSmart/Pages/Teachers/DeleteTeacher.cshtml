@page
@model BookSmart.Pages.Teachers.DeleteTeacherModel
@{
    ViewData["Title"] = "Delete";
    Layout = "../Pages/Shared/CoordinatorLayout";
}

<h1>Delete A Teacher</h1>

<h4>Are you sure you want to delete this Teacher?</h4>
<div>
    <h6>Teacher</h6>
    <hr />
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Teacher.Initials)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Teacher.Initials)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Teacher.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Teacher.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Teacher.Mail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Teacher.Mail)
            </dd>
        </dl>
        <div>
            <input type="hidden" asp-for="Teacher.Initials" />
            <input type="submit" value="Delete" class="btn btn-crud" />
            <a asp-page="/Teachers/GetTeachers" class="btn btn-crud">Back</a>
        </div>
    </form>
</div>