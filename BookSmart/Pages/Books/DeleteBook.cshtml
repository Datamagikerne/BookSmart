@page
@model BookSmart.Pages.Books.DeleteBookModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete A Book</h1>

<h3>Are you sure you want to delete this Book?</h3>
<div>
    <h4>Book</h4>
    <hr />
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Author)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Author)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Year)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Year)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Book.Subject.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Book.Subject.Name)
            </dd>
        </dl>
        <input type="hidden" asp-for="Book.BookId"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> 
        <a asp-page="GetBooks">Back to List</a>
    </form>
</div>