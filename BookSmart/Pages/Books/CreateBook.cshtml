@page
@model BookSmart.Pages.Books.CreateBookModel
@{
    ViewData["Title"] = "Create";
    Layout = "../Pages/Shared/TeacherLayout";
}

<h1>Create A Book</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Book.BookId" class="control-label"></label>
                <input asp-for="@Model.Book.BookId" class="form-control" />
                <span asp-validation-for="@Model.Book.BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Book.Title" class="control-label"></label>
                <input asp-for="@Model.Book.Title" class="form-control" />
                <span asp-validation-for="@Model.Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Book.Author" class="control-label"></label>
                <input asp-for="@Model.Book.Author" class="form-control" />
                <span asp-validation-for="@Model.Book.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="@Model.Book.Year" class="control-label"></label>
            <input asp-for="@Model.Book.Year" class="form-control" />
            <span asp-validation-for="@Model.Book.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="@Model.Book.SubjectId" class="control-label"></label>
            <input asp-for="@Model.Book.SubjectId" class="form-control" />
            <span asp-validation-for="@Model.Book.SubjectId" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Create" class="btn btn-crud"/>
                <a href="javascript:history.back()" class="btn btn-crud">Back</a>
            </div>
        </form>
    </div>
</div>