@page
@model BookSmart.Pages.Classes.CreateClassModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create A Class</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary=" ModelOnly " class="text-danger">
            </div>
            <div class="form-group">
                <strong><label asp-for="@Model.Class.ClassId" class="control-label"></label></strong>
                <input asp-for="@Model.Class.ClassId" class="form-control" />
                <span asp-validation-for="@Model.Class.ClassId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong><label asp-for="@Model.Class.Name" class="control-label"></label></strong>
                <input asp-for="@Model.Class.Name" class="form-control" />
                <span asp-validation-for="@Model.Class.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <strong><label asp-for="@Model.Class.Education" class="control-label"></label></strong>
                <input asp-for="@Model.Class.Education" class="form-control" />
                <span asp-validation-for="@Model.Class.Education" class="text-danger"></span>
            </div>
            <label class="custom-control-label"><strong>Choose Teachers</strong></label><br />
            <div>
                @foreach (var c in Model.Teachers)
                {
                    <input name="ChosenTeacherIds" type="checkbox" value="@c.Initials" />
                    @c.Initials
                    <br />
                }
            </div>
            <div>
                <input type="submit" value="Create" class="btn" style="background-color: #fff387; font-weight:bold" />
                <a href="javascript:history.back()" class="overskrift btn" style="position: relative; left: 15px; background-color: #fff387"><b>Back</b></a>
            </div>
        </form>
    </div>
</div>