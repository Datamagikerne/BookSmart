@page
@model BookSmart.Pages.Classes.CreateClassModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create Class</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Class.ClassId" class="control-label"></label>
                <input asp-for="@Model.Class.ClassId" class="form-control" />
                <span asp-validation-for="@Model.Class.ClassId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Class.Name" class="control-label"></label>
                <input asp-for="@Model.Class.Name" class="form-control" />
                <span asp-validation-for="@Model.Class.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Class.Education" class="control-label"></label>
                <input asp-for="@Model.Class.Education" class="form-control" />
                <span asp-validation-for="@Model.Class.Education" class="text-danger"></span>
            </div>
@*            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="GetClasses">Back to List</a>
            </div>*@
            <label class="custom-control-label text-black">Choose Teachers</label><br />
            <div>
                @foreach (var s in Model.Teachers)
                {
                    <input name="ChosenSubjectIds" type="checkbox" value="@s.Initials" checked="@(s.Initials == Model.InitialCheck)" />
                    @s.Name
                    <br />
                }
            </div>
            <br />

      
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>