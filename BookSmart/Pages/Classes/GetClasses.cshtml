@page
@model BookSmart.Pages.Classes.GetClassesModel
@{
    ViewData["Title"] = "GetClasses";
}

<h3 style="color:black"> List of Classes</h3>

<body>
    <div class="container" style="width:100%" ;>
        <table class="table" id="sortTable">
            <thead>
                <tr>
                    <th> Class Name  </th>
                    <th> Name </th>
                    <th> Education  </th>
                    <th> Teacher  </th>
                    <th class="th-g"></th>
                </tr>
            </thead>
            <tbody>

                @if (Model != null)
                {
                    @foreach (var item in Model.Classes)
                    {
                        <tr>
                            <td>  @item.Name </td>
                            <td>  @item.Education </td>
                            
                            
                          

                            <td>
                                <p>
                                    <a asp-page="/Classes/UpdateClass" class="btn btn-crud float-lg-end" role="button" asp-route-id="@item.Name"> Update </a>
                                    <a asp-page="/Classes/DeleteClass" class="btn btn-crud float-lg-end mr-1" role="button" asp-route-id="@item.Name">Delete </a>
                                </p>
                            </td>
                        </tr>
                    }
                }
        </table>
    </div>
    <script>
        $('#sortTable').DataTable();
    </script>
</body>
<p>
    <a asp-page="/Books/CreateBook" class="btn btn-crud float-lg-start">Create New Teacher</a>
</p>
