@page
@model BookSmart.Pages.Classes.GetClassesModel
@{
    ViewData["Title"] = "GetClasses";
}

<h3 style="color:red"> List of Classes</h3>
<p>
    <a asp-page="/Classes/CreateClass">Create New Class</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> Class id </th>
            <th> Name </th>
            <th> Education </th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null)
        {
            @foreach (var item in Model.Classes)
            {
                <tr>
                    <td> @item.ClassId </td>
                    <td>  @item.Name </td>
                    <td>  @item.Education </td>
                    <td>
                        <p>
                            <a asp-page="/Classes/UpdateClass" asp-route-cid="@item.ClassId"> Update </a>
                        </p>
                    </td>
                    <td>
                        <p>
                            <a asp-page="/Classes/DeleteClasses" asp-route-cid="@item.ClassId">Delete </a>
                        </p>
                    </td>
                </tr>
            }
        }
</table>

