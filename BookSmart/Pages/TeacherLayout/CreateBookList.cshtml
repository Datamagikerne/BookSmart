@page
@model BookSmart.Pages.TeacherLayout.CreateBookListModel
@{
    ViewData["Title"] = "CreateBooklist";
    Layout = "../Pages/Shared/TeacherLayout";
}

<h1>Create A Booklist</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary=" ModelOnly " class="text-danger">
            </div>
            <label class="custom-control-label"><strong>Choose Books</strong></label><br />
            <div>
                @foreach (var b in Model.Books)
                {
                    <input name="ChosenBookIds" type="checkbox" value="@b.BookId" />
                    @b.Title
                    <br />
                }
            </div>
            <br />
            <div>
                <input type="submit" asp-for="@Model.ID" value="Create" class="btn" style="background-color: #fff387; font-weight:bold" />
                <a href="javascript:history.back()" class="overskrift btn" style="position: relative; left: 15px; background-color: #fff387"><b>Back</b></a>
            </div>
                @*<input type="hidden" value="" name="id" />*@
        </form>
    </div>
</div>