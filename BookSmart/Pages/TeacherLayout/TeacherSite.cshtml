@page
@model BookSmart.Pages.TeacherLayout.TeacherSiteModel
@{
    ViewData["Title"] = "Site";
}

<h1 style="color:black"> Info on @Model.Teacher.Initials </h1>

<body>
    <div class="container" style="width:100%" ;>
        <table class="table" id="sortTable">
            <thead>
                <tr>
                    <th> Subjects </th>
                    <th class="th-g"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model.Teacher.SubjectTeachers)
                    {
                        <tr>
                            <td>  @item.Subject.Name </td>
                        </tr>
                    }
                }
        </table>
    </div>
    <div class="container" style="width:100%" ;>
        <table class="table" id="sortTable">
            <thead>
                <tr>
                    <th> Classes </th>
                    <th class="th-g"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model.Teacher.ClassTeachers)
                    {
                        <tr>
                            <td>  @item.Class.Name</td>
                        </tr>
                    }
                }
        </table>
    </div>
</body>