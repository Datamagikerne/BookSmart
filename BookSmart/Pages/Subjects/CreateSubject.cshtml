@page
@model BookSmart.Pages.Subjects.CreateSubjectModel
@{
    ViewData["Title"] = "Create";
    Layout = "../Pages/Shared/CoordinatorLayout";
}

<h1>Create A Subject</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Subject.Name" class="control-label"></label>
                <input asp-for="@Model.Subject.Name" class="form-control" />
                <span asp-validation-for="@Model.Subject.Name" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Create" class="btn btn-crud"/>
                <a asp-page="/Subjects/GetSubjects" class="btn btn-crud">Back</a>
            </div>
        </form>
    </div>
</div>