@page
@model BookSmart.Pages.Subjects.CreateSubjectModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="  ModelOnly  " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Subject.SubjectId" class="control-label"></label>
                <input asp-for="@Model.Subject.SubjectId" class="form-control" />
                <span asp-validation-for="@Model.Subject.SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Subject.Name" class="control-label"></label>
                <input asp-for="@Model.Subject.Name" class="form-control" />
                <span asp-validation-for="@Model.Subject.Name" class="text-danger"></span>
                <script>
                    $('#sortTable').dataTable({
                        "oSearch": { "sSearch": @Model.Subject.Name }
                    });
                </script>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

