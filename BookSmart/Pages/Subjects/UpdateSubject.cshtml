@page
@model BookSmart.Pages.Subjects.UpdateSubjectModel
@{
    ViewData["Title"] = "Update";
    Layout = "../Pages/Shared/CoordinatorLayout";
}

<h1>Update A Subject</h1>

<form method="post">
    <div class="overskrift form-group">
        <input asp-for="@Model.Subject.SubjectId" class="form-control" type="hidden"/>
        <span asp-validation-for="@Model.Subject.SubjectId" class="text-danger"></span>
    </div>
    <div class="overskrift form-group">
        <label asp-for="@Model.Subject.Name" class="control-label"></label>
        <input asp-for="@Model.Subject.Name" class="form-control"/>
        <span asp-validation-for="@Model.Subject.Name" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" value="Update" class="btn" style="background-color: #fff387; font-weight: bold"/>
        <a href="javascript:history.back()" class="overskrift btn"  style="position: relative; left: 15px; background-color: #fff387"><b>Back</b></a>
    </div>
</form>