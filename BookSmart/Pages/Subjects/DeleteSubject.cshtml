@page
@model BookSmart.Pages.Subjects.DeleteSubjectModel
@{
    ViewData["Title"] = "Delete";
    Layout = "../Pages/Shared/CoordinatorLayout";
}

<h1>Delete A Subject</h1>

<h4>Are you sure you want to delete this Subject?</h4>
<div>
    <h6>Subject</h6>
    <hr />
    <form method="post">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Subject.SubjectId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Subject.SubjectId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Subject.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Subject.Name)
            </dd>
        </dl>
        <div>
            <input type="hidden" asp-for="Subject.SubjectId" />
            <input type="submit" value="Delete" class="btn btn-crud"/>
            <a asp-page="/Subjects/GetSubjects" class="btn btn-crud">Back</a>
        </div>
    </form>
</div>