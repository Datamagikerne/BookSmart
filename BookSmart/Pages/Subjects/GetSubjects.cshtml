@page
@model BookSmart.Pages.Subjects.GetSubjectsModel
@{
    ViewData["Title"] = "GetSubjects";
}

<h3 style="color:black"> List of Subjects</h3>

<body>
    <div class="container" style="width:110%" ;>
        <table class="table" id="sortTable">
<p>
    <a asp-page="/Subjects/CreateSubject">Create A New Subject</a>
</p>
<form>
    <p>
        Search By Name: <input type="text" asp-for="FilterCriteria" />
        <input type="submit" value="Filter" />
        <a asp-page="/Subjects/GetSubjects">Back to Full List </a>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th> Subject Id </th>
            <th> Name </th>
            <th class="th-g"> </th>
            
            </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model.Subjects)
            {
                <tr>
                    <td> @item.SubjectId </td>
                    <td> @item.Name </td>
                    <td>
                        <p>
                            <a asp-page="/Subjects/UpdateSubject" asp-route-sid="@item.SubjectId">Update</a>
                        </p>
                    </td>
                    <td>
                        <p>
                            <a asp-page="/Subjects/DeleteSubject" asp-route-sid="@item.SubjectId">Delete</a>
                        </p>
                    </td>
                    
                </tr>
            }
        }
</table>
    </div>
    <script>
        $('#sortTable').DataTable();
    </script>
</body>
<p>
    
    <a asp-page="/Subjects/CreateSubject" class="btn btn-crud float-lg-start" role="button">Create New Subject</a>
</p>
